{
  "name": "@portal/feed",
  "version": "0.1.0",
  "description": "digital asset pricefeed",
  "main": "services/feed.js",
  "scripts": {
    "build": "npm run build:semantic && npm run build:browser",
    "build:browser": "rollup -c",
    "build:semantic": "cd libraries/fomantic && npx gulp build && cp -r dist/themes ../../assets && cd ../..",
    "dev": "npx concurrently \"npm run watch\" \"npm start\"",
    "coverage": "nyc npm test",
    "make:coverage": "npm run coverage && nyc report --reporter html",
    "quote": "node scripts/report.js",
    "review:coverage": "npm run make:coverage && http-server -p 8000 reports/coverage",
    "serve": "http-server assets",
    "start": "node scripts/node.js",
    "test": "mocha tests",
    "watch": "rollup -c -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FabricLabs/portal-feed.git"
  },
  "keywords": [
    "portal",
    "bitcoin",
    "ethereum"
  ],
  "author": "Fabric Labs",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FabricLabs/portal-feed/issues"
  },
  "homepage": "https://github.com/FabricLabs/portal-feed#readme",
  "dependencies": {
    "@fabric/core": "FabricLabs/fabric#master",
    "@fabric/http": "FabricLabs/fabric-http#feature/node-16"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.17.12",
    "@observablehq/plot": "^0.5.0",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-url": "^7.0.0",
    "d3": "^7.4.4",
    "d3-graphviz": "^4.1.1",
    "fomantic-ui": "^2.8.8",
    "fomantic-ui-css": "^2.8.8",
    "http-server": "^14.1.0",
    "lodash.merge": "^4.6.2",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "rollup": "^2.74.1",
    "rollup-plugin-import-css": "^3.0.3",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-polyfill-node": "^0.9.0",
    "rollup-plugin-serve": "^1.1.0",
    "semantic-ui-react": "^2.1.2"
  },
  "peerDependencies": {
    "react": "^18.1.0",
    "react-dom": "^18.1.0"
  },
  "babelOptions": {
    "compact": false
  },
  "nyc": {
    "exclude": [
      "assets",
      "contracts",
      "tests",
      "stores"
    ],
    "report-dir": "./reports/coverage",
    "temp-dir": "./reports/nyc"
  }
}
